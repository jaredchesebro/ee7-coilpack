{%- set row = fluid.first() -%}
{%- if row.file != '' -%}
    <figure class="figure">
        <img src="{{ row.file }}" class="figure-img img-fluid rounded" alt="{{ row.alt_text | default('') }}">
        {%- if row.caption | length -%}<figcaption class="figure-caption text-center">{{ row.caption }}</figcaption>{%- endif -%}
    </figure>
{%- endif -%}
