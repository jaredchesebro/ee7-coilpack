<section id="{{ fluidId }}" data-block="{{ fluidName }}">
    <div class="container py-5 mt-4">
        <div class="row justify-content-center">
            {%- if fluid.fields.heading | length -%}
                <h2 class="text-center">{{ fluid.fields.heading }}</h2>
            {%- endif -%}
            {%- if fluid.fields.subheading | length -%}
                <h3 class="text-center">{{ fluid.fields.subheading }}</h3>
            {%- endif -%}
            {% for row in fluid.fields.value_props %}
                <div class="col-lg-4 text-center mb-4"> 
                    <h3 class="h5">{{ row.heading }}</h3>
                    <p class="mb-0">{{ row.description }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
