{%- set metaTitle = entry.meta_title | default(global.site_name ~ ' | ' ~ entry.title) -%}
{%- set defaultMetaDescription = globals.meta_description | default('') -%}
{%- set metaDescription = entry.meta_description | default(defaultMetaDescription) -%}
{%- set defaultMetaImage = globals.meta_image.url | default('') -%}
{%- set metaImage = entry.meta_image.url | default(defaultMetaImage) -%}
{%- set metaRobots = entry.meta_robots | default('index, follow') -%}
{%- if app.config.global.no_index -%}
    {%- set metaRobots = 'none' -%}
{%- endif -%}
{%- set canonicalUrl = entry.page_url ?? global.current_url -%}
{%- if segment_2 == 'category' and segment_3 | length -%}
    {%- set metaTitle = global.site_name ~ ' | Category: ' ~ category.cat_name -%}
    {%- set metaRobots = 'noindex, follow' -%}
    {%- set metaDescription = catMetaDescription | default(defaultMetaDescription) -%}
{%- endif -%}
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>{{ metaTitle }}</title>
<meta name="description" content="{{ metaDescription }}">
<meta name="robots" content="{{ metaRobots }}">
{#- Facebook Meta Tags -#}
<meta property="og:url" content="{{ canonicalUrl }}">
<meta property="og:type" content="website">
<meta property="og:title" content="{{ metaTitle }}">
<meta property="og:description" content="{{ metaDescription }}">
{%- if metaImage -%}
    <meta property="og:image" content="{{ metaImage }}">
{%- endif -%}
{#- Twitter Meta Tags -#}
<meta name="twitter:card" content="summary_large_image">
<meta property="twitter:domain" content="{{ global.homepage }}">
<meta property="twitter:url" content="{{ canonicalUrl }}">
<meta name="twitter:title" content="{{ metaTitle }}">
<meta name="twitter:description" content="{{ metaDescription}}">
{%- if metaImage -%}
    <meta name="twitter:image" content="{{ metaImage }}">
{%- endif -%}
