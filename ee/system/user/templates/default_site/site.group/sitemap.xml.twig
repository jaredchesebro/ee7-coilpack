{% set entries = exp.channel.entries({channel:"home|pages|posts"}) %}

<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% for entry in entries %}
        {% if entry.sitemap == '1' %}
            {% set changeFrequency = 'monthly' %}
            {% if entry.change_frequency|length %}
                {% set changeFrequency = entry.change_frequency.data %}
            {% endif %}
            {% set priority = '0.5' %}
            {% if entry.channel_id == '1' %}
                {% set priority = '1.0' %}
            {% elseif entry.channel_id == '3' %}
                {% set priority = '0.9' %}
            {% elseif entry.channel_id == '5' %}
                {% set priority = '0.8' %}
            {% endif %}
            <url>
                <loc>{{ entry.page_url }}</loc>
                <lastmod>{{ entry.edit_date|date("Y-m-d") }}</lastmod>
                <changefreq>{{ changeFrequency }}</changefreq>
                <priority>{{ priority }}</priority>
            </url>
        {% endif %}
    {% endfor %}
</urlset>
