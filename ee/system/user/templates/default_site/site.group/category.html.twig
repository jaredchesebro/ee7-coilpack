{% extends "ee::site._layout" %}

{% set globals = exp.channel.entries({channel:"global_variables",limit:1}).first() %}
{% set category = exp.channel.categories({category: segment_3}).first() %}
{% set posts = exp.channel.entries({channel:"posts", category_id: category.cat_id, per_page:3 }) %}

    

{% set catMetaTitle = global.site_name ~ ' | ' ~ category.cat_name %}
{% set catMetaDescription = category.cat_description %}

{% block hero %}
    {% include 'ee::partials/_hero' %}
{% endblock %}

{% block contents %}

    <h2 class="visually-hidden">Posts</h2>
    <div class="container py-5">
        <div class="row">
            {% if not posts|length %}
                <div class="alert alert-warning" role="alert">
                   Sorry, No results!
                </div>
            {% endif %}

            {% for post in posts %}
                {% set featuredImage = post.featured_image.resize_crop({'resize:height': 600, 'crop:x': 100, 'crop:width': 800, 'crop:height': 600, 'crop:maintain_ratio': false }) %}
                {% set featuredImageWebp = post.featured_image.webp({'height': 600, 'width': 800, 'maintain_ratio': false }) %}
                {# 
                    .resize_crop parameters
                        resize:height
                        resize:width
                        resize:master_dim
                        resize:quality
                        crop:width
                        crop:height
                        crop:x
                        crop:y
                        crop:maintain_ratio
                        crop:quality
                #}
                {% set altText = post.featured_image.description %}
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <article class="card">
                        <picture>
                            <source srcset="{{ featuredImageWebp }}" type="image/webp" />
                            <img src="{{ featuredImage }}" class="card-img-top" alt="{{ altText }}">
                        </picture>
                        <div class="card-body">
                            <h3 class="card-title h5">{{ post.title }}</h3>
                            {% if post.categories|length %}
                            <div class="mb-2">
                                {% for category in post.categories %}
                                    <a class="badge text-bg-secondary text-decoration-none" href="/blog/category/{{ category.cat_url_title }}">{{ category.cat_name }}</a>
                                {% endfor %}
                            </div>
                            {% endif %}
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                            <a href="{{ post.page_url }}" class="btn btn-primary">Read More<span class="visually-hidden">: {{ post.title }}</span></a>
                        </div>
                    </article>
                </div>
            {% endfor %}
        </div>
    </div>
    {{ posts.links }}
{% endblock %}
